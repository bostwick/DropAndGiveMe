<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">
  
  	<TextView
  		android:id="@+id/dagm_challengeoverview_titlebar"
		android:text="Challenge Accepted."
		android:textSize="11pt"
		android:typeface="sans"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/dagm_titlebar_bg2"
		android:textColor="#000000"
		android:padding="5dp"
		android:paddingBottom="20dp"/>
	
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="1dip"
        android:layout_weight="1"
		android:fillViewport="true">
		
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center">
			
			<TextView 
				android:text="Challenge Title" 
				android:id="@+id/dagm_challengeoverview_title" 
				android:textSize="10pt"
				android:textStyle="bold"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:gravity="center"
				android:paddingBottom="20dp"/>
				
			<TextView 
				android:text="This is the description text for the challenge. See? It's longer than the title." 
				android:id="@+id/dagm_challengeoverview_description" 
				android:textSize="8pt"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:gravity="center"
				android:paddingBottom="20dp"/>
			
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center">
				<TextView
					android:id="@+id/dagm_challengeoverview_scorelabel"
					android:text="High Score:"
					android:textSize="8pt"
					android:textStyle="bold"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingRight="10dp"/>
				
				<TextView 
					android:text="133pts" 
					android:id="@+id/dagm_challengeoverview_score" 
					android:textSize="8pt"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"/>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
		
	<TextView 
		android:text="Ready?" 
		android:textSize="8pt"
		android:textStyle="bold"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:gravity="center"
		android:paddingBottom="5dp"/>
	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:paddingBottom="9dp"
		android:orientation="vertical"
		android:paddingLeft="55dp"
		android:paddingRight="55dp">
		
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical">
		
		<Button
			android:id="@+id/dagm_challengeoverview_friend_button"
			android:onClick="onFriendClicked"
			android:text="Challenge a Friend!"
			android:textSize="9pt"
			android:background="@drawable/dagm_go_button_bg"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingTop="9dp"
			android:paddingBottom="9dp"
			android:layout_marginBottom="12dp"
			android:visibility="gone"/>

		
		<Button
			android:id="@+id/dagm_challengeoverview_go_button"
			android:onClick="onGoClicked"
			android:text="Challenge Yourself!"
			android:textSize="9pt"
			android:background="@drawable/dagm_go_button_bg"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingTop="9dp"
			android:paddingBottom="9dp"
			android:layout_marginBottom="12dp"/>
		</LinearLayout>
	</LinearLayout>
		
</LinearLayout>
