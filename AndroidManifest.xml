<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.bostwickgarnes.dropandgiveme"
      android:versionCode="2"
      android:versionName="1.1">
    <uses-sdk android:minSdkVersion="7" />

    <application android:icon="@drawable/icon" android:label="@string/app_name">
	
	<activity
  			android:name=".DagmHome"
  			android:label="Drop and Give Me"
  			android:theme="@android:style/Theme.NoTitleBar"
  			android:screenOrientation="portrait"> 
  			<intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
    </activity>
	
	<activity
  			android:name=".FriendSelection"
  			android:label="Friend Selection"
  			android:theme="@android:style/Theme.NoTitleBar"
  			android:screenOrientation="portrait"/>
 
  		<activity
  			android:name=".FriendConfirm"
  			android:label="Friend Confirmation"
  			android:theme="@android:style/Theme.NoTitleBar"
  			android:screenOrientation="portrait"/> 		
  		<activity
  			android:name=".ChallengeHome"
  			android:label="Challenges"
  			android:theme="@android:style/Theme.NoTitleBar"
  			android:screenOrientation="portrait"/>
  		<activity
  			android:name=".ChallengeOverview"
  			android:label="Challenge Accepted"
  			android:theme="@android:style/Theme.NoTitleBar"
  			android:screenOrientation="portrait"/>
  		<activity
  			android:name=".PlayChallenge"
  			android:label="Play Challenge"
  			android:theme="@android:style/Theme.NoTitleBar"
  			android:screenOrientation="portrait"/>
  		<activity
  			android:name=".ChallengeResult"
  			android:label="Challenge Result"
  			android:theme="@android:style/Theme.NoTitleBar"
  			android:screenOrientation="portrait"/>
  		<activity
  			android:name=".TrainingHome"
  			android:label="Training"
  			android:theme="@android:style/Theme.NoTitleBar"
  			android:screenOrientation="portrait"/>

    </application>
    
    <uses-sdk android:minSdkVersion="7" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
</manifest>